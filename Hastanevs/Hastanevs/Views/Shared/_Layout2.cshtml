<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hastanevs.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

</head>
<body>
    <header>
        <div class="top-bar my-1 border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <!-- Sol tarafta boş alan -->
                    </div>
                    <div class=" text-right">
                        <!-- Sağ tarafta sosyal medya ikonları -->
                        <a href="https://www.facebook.com/sakaryauni" target="_blank" class="social pl-4"><img src="~/Resim/facebook.jpg" alt="Facebook" class="social-img"> Facebook</a>
                        <a href="https://www.youtube.com/sakaryauni" target="_blank" class="social pl-4"><img src="~/Resim/youtube.png" alt="YouTube" class="social-img"> Youtube</a>
                        <a href="https://www.instagram.com/sakaryauni" target="_blank" class="social pl-4"><img src="~/Resim/instagram.png" alt="Instagram" class="social-img"> Instagram</a>
                        <a href="https://www.linkedin.com/school/sakaryauni/" target="_blank" class="social pl-4 pr-0"><img src="~/Resim/linkedin.png" alt="LinkedIn" class="social-img"> Linkedin</a>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid ">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Resim/sau.jpg" alt="Logo">
                </a>
                <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">SauHas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-dark px-4" asp-area="" asp-controller="Home" asp-action="Hastanemiz">Hastanemiz</a>
                        </li>                      
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-4" data-toggle="dropdown">Tıbbi Birimler <b class="caret"></b></a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Goz", "Bolum")">Göz</a>
                                <a class="dropdown-item" href="@Url.Action("Cildiye", "Bolum")">Cildiye</a>
                                <a class="dropdown-item" href="@Url.Action("Noroloji", "Bolum")">Nöroloji</a>
                            </div>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark px-4" asp-area="" asp-controller="Home" asp-action="Doktorlarimiz">Doktorlarımız</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark px-4" asp-area="" asp-controller="Bolum" asp-action="Index">deneme</a>
                        </li>
                        <li class="ml-auto text-right">
                            <a class="btn btn-success " asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>
                        <li class="ml-2 dropdown text-right ">
                            <a href="#" class="nav-link dropdown-toggle pl-4" data-toggle="dropdown">
                                <img src="~/Resim/language.png" alt="Dil" class="social-img">
                                <b class="caret"></b></a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("", "")">Türkçe</a>
                                <a class="dropdown-item" href="@Url.Action("", "")">English</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>
    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Hastanevs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->
    <!-- jQuery ve Bootstrap bağlantıları -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
